@model EditTagViewModel
@{
    ViewData["Title"] = "Edit Tag";
}

<div class="page-header">
    <div class="page-title">✏️ Edit Tag</div>
    <a asp-controller="Notes" asp-action="Tags" class="btn btn-secondary">← Tags</a>
</div>

<div class="card" style="max-width:480px;">
    <form asp-controller="Notes" asp-action="EditTag" asp-route-uid="@Model.Uid" method="post">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label class="form-label">Name <span style="color:var(--red)">*</span></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" style="color:var(--red);font-size:0.8rem;"></span>
        </div>
        <div class="form-group">
            <label class="form-label">Description</label>
            <input asp-for="Description" class="form-control" />
        </div>
        <div class="form-group">
            <label class="form-label">Color</label>
            <div style="display:flex;gap:0.5rem;align-items:center;">
                <input asp-for="Color" type="color" style="width:40px;height:36px;border:none;background:none;cursor:pointer;" />
                <input asp-for="Color" class="form-control" style="max-width:120px;font-family:monospace;" />
            </div>
        </div>
        <div style="display:flex;gap:0.5rem;">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-controller="Notes" asp-action="Tags" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts { @await Html.PartialAsync("_ValidationScriptsPartial") }
