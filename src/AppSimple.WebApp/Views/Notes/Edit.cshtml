@model EditNoteViewModel
@{
    ViewData["Title"] = "Edit Note";
}

<div class="page-header">
    <div class="page-title">✏️ Edit Note</div>
    <a asp-controller="Notes" asp-action="Detail" asp-route-uid="@Model.Uid" class="btn btn-secondary">← Back</a>
</div>

<div class="card" style="max-width:720px;">
    <form asp-controller="Notes" asp-action="Edit" asp-route-uid="@Model.Uid" method="post">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label class="form-label">Title <span style="color:var(--subtext)">(optional)</span></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" style="color:var(--red);font-size:0.8rem;"></span>
        </div>
        <div class="form-group">
            <label class="form-label">Content <span style="color:var(--red)">*</span></label>
            <textarea asp-for="Content" class="form-control" rows="10" style="resize:vertical;"></textarea>
            <span asp-validation-for="Content" style="color:var(--red);font-size:0.8rem;"></span>
        </div>
        <div style="display:flex;gap:0.5rem;">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-controller="Notes" asp-action="Detail" asp-route-uid="@Model.Uid" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts { @await Html.PartialAsync("_ValidationScriptsPartial") }
