@model EditContactViewModel
@{
    ViewData["Title"] = "Edit Contact";
}

<div class="page-header">
    <div class="page-title">✏️ Edit Contact</div>
    <a asp-controller="Contacts" asp-action="Detail" asp-route-uid="@Model.Uid" class="btn btn-secondary">← Back</a>
</div>

<div class="card" style="max-width:480px;">
    <form asp-controller="Contacts" asp-action="Edit" asp-route-uid="@Model.Uid" method="post">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label class="form-label">Name <span style="color:var(--red)">*</span></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" style="color:var(--red);font-size:0.8rem;"></span>
        </div>
        <div style="display:flex;gap:0.5rem;">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-controller="Contacts" asp-action="Detail" asp-route-uid="@Model.Uid" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts { @await Html.PartialAsync("_ValidationScriptsPartial") }
