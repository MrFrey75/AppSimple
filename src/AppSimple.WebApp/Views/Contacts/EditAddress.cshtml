@model ContactAddressViewModel
@using AppSimple.Core.Enums
@{
    ViewData["Title"] = "Edit Address";
}

<div class="page-header">
    <div class="page-title">✏️ Edit Address</div>
    <a asp-controller="Contacts" asp-action="Detail" asp-route-uid="@Model.ContactUid" class="btn btn-secondary">← Back</a>
</div>

<div class="card" style="max-width:540px;">
    <form asp-controller="Contacts" asp-action="EditAddress"
          asp-route-contactUid="@Model.ContactUid" asp-route-addressUid="@Model.AddressUid" method="post">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label class="form-label">Street <span style="color:var(--red)">*</span></label>
            <input asp-for="Street" class="form-control" />
            <span asp-validation-for="Street" style="color:var(--red);font-size:0.8rem;"></span>
        </div>
        <div style="display:grid;grid-template-columns:1fr 1fr;gap:0.75rem;">
            <div class="form-group">
                <label class="form-label">City <span style="color:var(--red)">*</span></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" style="color:var(--red);font-size:0.8rem;"></span>
            </div>
            <div class="form-group">
                <label class="form-label">State / Province</label>
                <input asp-for="State" class="form-control" />
            </div>
        </div>
        <div style="display:grid;grid-template-columns:1fr 1fr;gap:0.75rem;">
            <div class="form-group">
                <label class="form-label">Postal / ZIP Code</label>
                <input asp-for="PostalCode" class="form-control" />
            </div>
            <div class="form-group">
                <label class="form-label">Country <span style="color:var(--red)">*</span></label>
                <input asp-for="Country" class="form-control" />
                <span asp-validation-for="Country" style="color:var(--red);font-size:0.8rem;"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="form-label">Type</label>
            <select asp-for="Type" asp-items="Html.GetEnumSelectList<AddressType>()" class="form-control"></select>
        </div>
        <div class="form-group" style="display:flex;align-items:center;gap:0.5rem;">
            <input asp-for="IsPrimary" type="checkbox" />
            <label asp-for="IsPrimary" class="form-label" style="margin:0;">Set as primary</label>
        </div>
        <div style="display:flex;gap:0.5rem;margin-top:1rem;">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-controller="Contacts" asp-action="Detail" asp-route-uid="@Model.ContactUid" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts { @await Html.PartialAsync("_ValidationScriptsPartial") }
