@model ContactPhoneViewModel
@using AppSimple.Core.Enums
@{
    ViewData["Title"] = "Edit Phone Number";
}

<div class="page-header">
    <div class="page-title">✏️ Edit Phone Number</div>
    <a asp-controller="Contacts" asp-action="Detail" asp-route-uid="@Model.ContactUid" class="btn btn-secondary">← Back</a>
</div>

<div class="card" style="max-width:480px;">
    <form asp-controller="Contacts" asp-action="EditPhone"
          asp-route-contactUid="@Model.ContactUid" asp-route-phoneUid="@Model.PhoneUid" method="post">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label class="form-label">Number <span style="color:var(--red)">*</span></label>
            <input asp-for="Number" class="form-control" type="tel" />
            <span asp-validation-for="Number" style="color:var(--red);font-size:0.8rem;"></span>
        </div>
        <div class="form-group">
            <label class="form-label">Type</label>
            <select asp-for="Type" asp-items="Html.GetEnumSelectList<PhoneType>()" class="form-control"></select>
        </div>
        <div class="form-group" style="display:flex;align-items:center;gap:0.5rem;">
            <input asp-for="IsPrimary" type="checkbox" />
            <label asp-for="IsPrimary" class="form-label" style="margin:0;">Set as primary</label>
        </div>
        <div style="display:flex;gap:0.5rem;margin-top:1rem;">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-controller="Contacts" asp-action="Detail" asp-route-uid="@Model.ContactUid" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts { @await Html.PartialAsync("_ValidationScriptsPartial") }
