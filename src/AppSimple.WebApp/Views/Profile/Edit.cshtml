@model EditProfileViewModel
@{
    ViewData["Title"] = "Edit Profile";
}

<div class="page-header">
    <div class="page-title">Edit Profile</div>
</div>

<div class="card" style="max-width: 600px;">
    <form asp-controller="Profile" asp-action="Edit" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label class="form-label" asp-for="FirstName">First Name</label>
            <input class="form-control" asp-for="FirstName" />
        </div>

        <div class="form-group">
            <label class="form-label" asp-for="LastName">Last Name</label>
            <input class="form-control" asp-for="LastName" />
        </div>

        <div class="form-group">
            <label class="form-label" asp-for="PhoneNumber">Phone Number</label>
            <input class="form-control" asp-for="PhoneNumber" />
        </div>

        <div class="form-group">
            <label class="form-label" asp-for="DateOfBirth">Date of Birth</label>
            <input class="form-control" asp-for="DateOfBirth" type="date" />
        </div>

        <div class="form-group">
            <label class="form-label" asp-for="Bio">Bio</label>
            <textarea class="form-control" asp-for="Bio" rows="4"></textarea>
        </div>

        <div style="display: flex; gap: 0.5rem; margin-top: 0.5rem;">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-controller="Profile" asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
