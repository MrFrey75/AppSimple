@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="page-header">
    <div class="page-title">Change Password</div>
</div>

<div class="card" style="max-width: 480px;">
    @if (Model.Error is not null)
    {
        <div class="alert alert-error">@Model.Error</div>
    }
    @if (Model.Success is not null)
    {
        <div class="alert alert-success">@Model.Success</div>
    }

    <form asp-controller="Profile" asp-action="ChangePassword" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label class="form-label" asp-for="CurrentPassword">Current Password</label>
            <input class="form-control" asp-for="CurrentPassword" />
        </div>

        <div class="form-group">
            <label class="form-label" asp-for="NewPassword">New Password</label>
            <input class="form-control" asp-for="NewPassword" />
        </div>

        <div style="display: flex; gap: 0.5rem; margin-top: 0.5rem;">
            <button type="submit" class="btn btn-primary">Change Password</button>
            <a asp-controller="Profile" asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
