@model EditUserViewModel
@{
    ViewData["Title"] = "Edit User";
}

<div class="page-header">
    <div>
        <div class="page-title">Edit User</div>
        <div class="page-subtitle">@Model.Username</div>
    </div>
</div>

<div class="card" style="max-width: 600px;">
    @if (Model.Error is not null)
    {
        <div class="alert alert-error">@Model.Error</div>
    }

    <form asp-controller="Admin" asp-action="Edit" asp-route-uid="@Model.Uid" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label class="form-label">Username (read-only)</label>
            <input class="form-control" value="@Model.Username" readonly style="opacity: 0.6; cursor: not-allowed;" />
        </div>

        <div class="form-group">
            <label class="form-label" asp-for="FirstName">First Name</label>
            <input class="form-control" asp-for="FirstName" />
        </div>

        <div class="form-group">
            <label class="form-label" asp-for="LastName">Last Name</label>
            <input class="form-control" asp-for="LastName" />
        </div>

        <div class="form-group">
            <label class="form-label" asp-for="PhoneNumber">Phone Number</label>
            <input class="form-control" asp-for="PhoneNumber" />
        </div>

        <div class="form-group">
            <label class="form-label" asp-for="DateOfBirth">Date of Birth</label>
            <input class="form-control" asp-for="DateOfBirth" type="date" />
        </div>

        <div class="form-group">
            <label class="form-label" asp-for="Bio">Bio</label>
            <textarea class="form-control" asp-for="Bio" rows="3"></textarea>
        </div>

        <div class="form-group">
            <label class="form-label" asp-for="Role">Role</label>
            <select class="form-control" asp-for="Role">
                <option value="0">User</option>
                <option value="1">Admin</option>
            </select>
        </div>

        <div class="form-group" style="display: flex; align-items: center; gap: 0.5rem;">
            <input type="checkbox" asp-for="IsActive" id="IsActive" style="width: auto;" />
            <label for="IsActive" class="form-label" style="margin: 0;">Active</label>
        </div>

        <div style="display: flex; gap: 0.5rem; margin-top: 0.5rem;">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
