<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AppSimple.MvvmApp.ViewModels"
        xmlns:ctrl="using:AppSimple.MvvmApp.Controls"
        x:Class="AppSimple.MvvmApp.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="AppSimple"
        Width="1200" Height="750"
        MinWidth="900" MinHeight="600"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource ThemeWindowBrush}">

    <DockPanel>

        <!-- â”€â”€ Top NavBar â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
        <ctrl:NavBar DockPanel.Dock="Top" DataContext="{Binding}" />

        <!-- â”€â”€ Body â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
        <Grid>
            <Grid.ColumnDefinitions>
                <!-- Left sidebar: only visible when logged in -->
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*"   />
            </Grid.ColumnDefinitions>

            <!-- Left sidebar -->
            <Border Grid.Column="0"
                    Background="{DynamicResource ThemeSurfaceBrush}"
                    IsVisible="{Binding IsLoggedIn}"
                    Padding="8,12">
                <StackPanel Spacing="4">

                    <Button Classes="nav"
                            HorizontalAlignment="Stretch"
                            Content="ðŸ   Home"
                            Command="{Binding NavigateToHomeCommand}" />

                    <Button Classes="nav"
                            HorizontalAlignment="Stretch"
                            Content="ðŸ‘¤  Profile"
                            Command="{Binding NavigateToProfileCommand}" />

                    <Button Classes="nav"
                            HorizontalAlignment="Stretch"
                            Content="ðŸ‘¥  Users"
                            IsVisible="{Binding IsAdmin}"
                            Command="{Binding NavigateToUsersCommand}" />

                </StackPanel>
            </Border>

            <!-- Main content area -->
            <Border Grid.Column="1"
                    Padding="24">
                <ContentControl Content="{Binding CurrentPage}" />
            </Border>

        </Grid>
    </DockPanel>
</Window>
